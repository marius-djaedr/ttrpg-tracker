@page
@using TtrpgTrackerUi.Models
@model TtrpgTrackerUi.Pages.CampaignListModel
@{
    ViewData["Title"] = "Campaign List";
}
<h1>Campaign List</h1>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <label asp-for="NewCampaign.Name">Name</label>
        <input type="text" asp-for="NewCampaign.Name" class="mr-5">
        <label asp-for="NewCampaign.System">System</label>
        <input type="text" asp-for="NewCampaign.System" class="mr-5">
        <label asp-for="NewCampaign.Gm">Gm</label>
        <input type="text" asp-for="NewCampaign.Gm" class="mr-5">
        <label asp-for="NewCampaign.Completed">Completed</label>
        <select asp-for="NewCampaign.Completed" asp-items="Html.GetEnumSelectList<CampaignCompleted>()" class="mr-5"></select>
        <button class="btn btn-primary">Add</button>
    </div>
</form>
<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">System</th>
            <th scope="col">Gm</th>
            <th scope="col">Completed</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    @foreach (var campaign in Model.campaigns)
    {
        <tr>
            <td>@campaign.Name</td>
            <td>@campaign.System</td>
            <td>@campaign.Gm</td>
            <td>@campaign.Completed</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@campaign.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}